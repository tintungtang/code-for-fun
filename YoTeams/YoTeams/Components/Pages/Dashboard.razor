@page "/"
@using YoTeams.Models
@using YoTeams.Components.Common.TeamCard
@inject NavigationManager NavManager


<PageTitle>Dashboard</PageTitle>


@code {
    List<Team> teams = new()
    {
        new Team { Id = 1, Name = "Team Alpha", Members = new List<string> { "Alice", "Bob" } },
        new Team { Id = 2, Name = "Team Beta", Members = new List<string> { "Charlie", "Dave" } }
    };

    void RemoveTeam(int id)
    {
        teams.RemoveAll(t => t.Id == id);
    }
}

<h2>Team List</h2>

<div class="row">
    @foreach (var team in teams)
    {
        <div class="col">
            <TeamCard team="@team" />    
        </div>
    }
</div>

